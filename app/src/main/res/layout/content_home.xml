<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="uber.example.uber.parent.Home"
    tools:showIn="@layout/activity_home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_marginBottom="20dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="30dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:onClick="eval_act"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/eval_icon"/>
                <ImageView
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:onClick="man_act"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/man_com_icon"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:onClick="chat_act"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/chat_icon"/>
                <ImageView
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:onClick="bus_follow_act"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bus_follow_icon"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:onClick="chat_act"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/mid_res_icon"/>
                <ImageView
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gen_act"/>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:text="جميع الحقوق محفوظه 2018"
        android:textColor="@color/white"
        android:textSize="20sp" />
</LinearLayout>
